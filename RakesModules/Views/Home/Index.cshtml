            <div class="card text-center bg-primary text-white hover-effect">
                <div class="card-body">
                    <h3 class="card-title">Rakes</h3>
                    <p class="card-text">
                        <img src="~/assets/img/Rakes.png" alt="Train Image" style="width: 100px; height: 100px;">
                    </p>
                    @*                     <p class="card-text">Total: @Model.RakesCount</p>
                    *@                    <a href="@Url.Action("Index", "Rakes")" class="btn btn-light">View Rakes</a>
