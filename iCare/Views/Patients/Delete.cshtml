@model iCare.Models.Patient

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .confirmation-message {
        font-size: 1.25rem;
    }

    .detail-item dt {
        font-weight: bold;
    }

    .detail-item dd {
        margin-bottom: 10px;
    }

    .modal-title, .modal-body {
        font-size: 1.25rem;
    }

    .btn-lg {
        font-size: 1.25rem;
    }
</style>

<div class="container mt-4">
    <h1 class="text-center text-danger"><i class="fas fa-trash-alt"></i> Delete Patients</h1>
    <div class="text-center confirmation-message mb-4">
    </div>
    <div class="card">
        <div class="card-body">
            <h4 class="text-center"><i class="fas fa-user"></i> Patient Detail</h4>
            <hr />
            <dl class="row detail-item">
                <dt class="col-sm-2"><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.PatientName)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PatientName)</dd>

                <dt class="col-sm-2"><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.Dob)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Dob)</dd>

                <dt class="col-sm-2"><i class="fas fa-venus-mars"></i> @Html.DisplayNameFor(model => model.Gender)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Gender)</dd>

                <dt class="col-sm-2"><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.ContactNumber)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ContactNumber)</dd>

                <dt class="col-sm-2"><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-2"><i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <button class="btn btn-danger btn-lg" data-toggle="modal" data-target="#confirmDeleteModal">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel"><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this patient's details?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PatientId" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap and jQuery scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
