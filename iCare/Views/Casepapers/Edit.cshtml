@model iCare.Models.Casepaper

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOM1p5z4pE2U7Edz4p6U1Q6dRM3eNvD3E4aUQ7q4" crossorigin="anonymous">

<style>
    .form-label {
        font-weight: bold;
        color: black;
        font-size: 1.1em; /* Adjust the font size as needed */
    }

    .min-tittle {
        background-color: #50C878; /* Navy blue */
        color: white;
        font-weight: bold;
        padding: 10px;
    }

    .left-eye {
        background-color: #00008B; /* Light blue for Left Eye */
        color: white;
    }

    .right-eye {
        background-color: #00008B; /* Light orange for Right Eye */
        color: white;
    }

    .table tbody td {
        background-color: #f8f9fa; /* Faint gray background */
        color: black;
        padding: 10px;
        font-size: 1em;
    }

        .table tbody td input {
            width: 100%;
            box-sizing: border-box;
        }
    /* Custom font and font style */
    .custom-heading {
        font-family: 'Arial', sans-serif;
        font-style: italic;
        font-weight: bold;
    }
</style>
</head>
<h1 class="text-center custom-heading">
    <i class="fas fa-edit"></i> Update CasePaper
</h1>
<div class="container mt-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CasepaperId" />
            <!-- Patient and Frame Details -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label form-label">Patients Names</label>
                        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                    </div>
                <div class="form-group">
                    <label asp-for="MobileNumber" class="control-label form-label">MobileNumber</label>
                    <input asp-for="MobileNumber" class="form-control" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>

                    <div class="form-group">
                        <label asp-for="FrameId" class="control-label form-label">Frame Names</label>
                        <select asp-for="FrameId" class="form-control" asp-items="ViewBag.FrameId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="GlassId" class="control-label form-label">Glass Names</label>
                        <select asp-for="GlassId" class="form-control" asp-items="ViewBag.GlassId"></select>
                    </div>
                   
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FrameTypesId" class="control-label form-label">FrameType</label>
                        <select asp-for="FrameTypesId" class="form-control" asp-items="ViewBag.FrameTypesId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="GlassTypesId" class="control-label form-label">GlassType</label>
                        <select asp-for="GlassTypesId" class="form-control" asp-items="ViewBag.GlassTypesId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedDate" class="control-label form-label">Created Date</label>
                        <input asp-for="CreatedDate" class="form-control" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Remarks" class="control-label form-label">Remarks</label>
                        <input asp-for="Remarks" class="form-control" />
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label form-label">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered  text-center">
                    <thead class="thead-primary">
                        <tr>
                            <th colspan="0" class="left-eye"></th>
                            <th colspan="3" class="right-eye">Right Eye</th>
                            <th colspan="3" class="left-eye">Left Eye</th>
                        </tr>
                        <tr>
                            <th class="min-tittle"></th>
                            <th class="min-tittle">SPH</th>
                            <th class="min-tittle">CYL</th>
                            <th class="min-tittle">AXIS</th>
                            <th class="min-tittle">SPH</th>
                            <th class="min-tittle">CYL</th>
                            <th class="min-tittle">AXIS</th>
                        </tr>
                    </thead>
                    <tbody>
                    <!-- Inside the <tbody> tag -->
                    <tr>
                        <td class="table-light">Distance Vision</td>
                        <td class="right-eye"><input asp-for="RightEyeSphdv" class="form-control" required /></td>
                        <td class="right-eye"><input asp-for="RightEyeCyldv" class="form-control" required /></td>
                        <td class="right-eye"><input asp-for="RightEyeAxisdv" class="form-control" required /></td>
                        <td class="left-eye"><input asp-for="LeftEyeSphdv" class="form-control" required /></td>
                        <td class="left-eye"><input asp-for="LeftEyeCyldv" class="form-control" required /></td>
                        <td class="left-eye"><input asp-for="LeftEyeAxisdv" class="form-control" required /></td>
                
                    </tr>
                    <tr>
                        <td class="table-light">Near Vision</td>
                        <td class="right-eye"><input asp-for="RightEyeSphnv" class="form-control" required /></td>
                        <td class="right-eye"><input asp-for="RightEyeCylnv" class="form-control" required /></td>
                        <td class="right-eye"><input asp-for="RightEyeAxisnv" class="form-control" required /></td>
                        <td class="left-eye"><input asp-for="LeftEyeSphnv" class="form-control" required /></td>
                        <td class="left-eye"><input asp-for="LeftEyeCylnv" class="form-control" required /></td>
                        <td class="left-eye"><input asp-for="LeftEyeAxisnv" class="form-control" required /></td>
                       
                    </tr>

                    </tbody>
                </table>
            </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <!-- Submit button -->
                <button id="submitButton" type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#successModal">
                    <i class="fas fa-check"></i> Submit
                </button>

                <!-- Back button -->
                <a asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Success Modal -->
        <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="successModalLabel">Success!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        CasePaper Updated Successfully.
                    </div>
                    <div class="modal-footer">
                        <!-- Add buttons to close the modal -->
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Continue</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap and jQuery scripts -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function () {
                // When submit button is clicked
                $("#submitButton").click(function () {
                    // Show success modal
                    $("#successModal").modal("show");
                });
            });
        </script>

        </form>
    </div>

