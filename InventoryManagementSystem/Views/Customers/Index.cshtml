@model IEnumerable<InventoryManagementSystem.Models.Domain.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"> Add Customers</a></i>
</p>
<div class="card-body p-0">
    <table  class="table table-striped projects">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td class="project-actions text-right">
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    </td>
                    <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                    </td>
                    <td class="project-actions text-right">
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
